# AuditShield Production Environment Configuration
# Copy this to .env and fill in the values

# REQUIRED: GitHub Personal Access Token with repo permissions
GITHUB_TOKEN=ghp_your_token_here

# REQUIRED: Webhook secret for signature verification
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
WEBHOOK_SECRET=your_webhook_secret_here

# REQUIRED in production: Set to "production" to enforce all security checks
ENVIRONMENT=production

# AuditShield mode: "warn" (default) or "enforce"
AUDITSHIELD_MODE=warn

# Webhook server port (default: 8000)
PORT=8000

# Debug mode (NEVER set to true in production)
DEBUG=false

# NEVER set in production - only for local testing
# SKIP_WEBHOOK_VERIFICATION=true

# Optional: Redis URL for distributed rate limiting and replay protection
# REDIS_URL=redis://localhost:6379/0

# Optional: Database URL for metrics storage
# DATABASE_URL=postgresql://user:pass@localhost/auditshield

# Optional: Allowed repositories (comma-separated, empty = all allowed)
# ALLOWED_REPOS=owner/repo1,owner/repo2

# Optional: Denied repositories (comma-separated)
# DENIED_REPOS=owner/untrusted-repo
